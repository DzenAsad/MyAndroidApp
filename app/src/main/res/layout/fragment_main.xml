<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <Button
        android:id="@+id/btnClicker1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Click First"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnClicker2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Click Second"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnClickerSum"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Sum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        app:layout_constraintEnd_toEndOf="@+id/btnClicker1"
        app:layout_constraintStart_toStartOf="@+id/btnClicker1"
        app:layout_constraintTop_toBottomOf="@+id/btnClicker1" />

    <TextView
        android:id="@+id/tvCount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        app:layout_constraintEnd_toEndOf="@+id/btnClicker2"
        app:layout_constraintStart_toStartOf="@+id/btnClicker2"
        app:layout_constraintTop_toBottomOf="@+id/btnClicker2" />

    <TextView
        android:id="@+id/tvCountSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        app:layout_constraintEnd_toEndOf="@+id/btnClickerSum"
        app:layout_constraintStart_toStartOf="@+id/btnClickerSum"
        app:layout_constraintTop_toBottomOf="@+id/btnClickerSum" />

</androidx.constraintlayout.widget.ConstraintLayout>